#include<stdio.h>

void area_peri(float, float*, float*);
  
int main() {
float radius , area , circumference;
	scanf("%f",&radius);
	area_peri(radius, &area,&circumference);
	printf("%.2f\n",area);
	printf("%.2f\n",circumference);
	return 0;
	
	
}

void area_peri(  float rad,float* area,float* circum       ) {*area = 3.14* rad * rad;
	*circum = 2 * 3.14 * rad;
	
	
	
}
